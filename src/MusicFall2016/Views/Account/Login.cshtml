@model MusicFall2016.Models.LoginViewModel
 
@{
    ViewData["Title"] = "Login";
}

<h3>You must log in first! </h3>
<h5>Don't have an account? Register <a href="/Account/Register">here!</a></h5>


<form asp-action="Login" method="post">
    Email <p><input type="text" asp-for="Email" /></p>
    <span asp-validation-for="Email"></span>

    Password <p><input type="password" asp-for="Password" /></p>
    <span asp-validation-for="Password"></span>

    <button class="button btn btn-info" id="login">Login</button>
</form>
