@model IEnumerable<MusicFall2016.Models.Artist>
@{
    ViewData["Title"] = "Artists";
}
<h1><span class="glyphicon glyphicon-user"></span> Artists</h1>



<table class="table">

    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
        </tr>
    </thead>

    @foreach (var artist in Model)
    {
        <tr>
            <td>@artist.Name</td>
            <td>@artist.Bio</td>

            <td>
                <a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@artist.ArtistID">Edit</a> 
                
                
                <a class="btn btn-sm btn-info"asp-action="Retrieve" asp-route-id="@artist.ArtistID">Details</a>

            </td>
        </tr>
    }
</table>

<form action="Create" method="get">

    <button>Create Artist</button>

</form>

<br />

<form action="\Home\Index" method="get">

    <button>Go back to Home Page</button>

</form>

