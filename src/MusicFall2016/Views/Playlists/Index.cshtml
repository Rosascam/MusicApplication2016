@model IEnumerable<MusicFall2016.Models.Playlist>
@{
    ViewData["Title"] = "Playlists";
}

<h2> <span class="glyphicon glyphicon-user"></span> Welcome @User.Identity.Name! </h2>

<br />

    <table class="table">

        <thead>
            <tr>
                <th>Playlists</th>
                
            </tr>
        </thead>

        @foreach (var playlist in Model)
        {
            <tr>
                <td>@playlist.name</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@playlist.PlaylistID">Rename</a>
                    <a class="btn btn-info" asp-action="Delete" asp-route-id="@playlist.PlaylistID">Delete</a>
                </td>
            </tr>
        }
    </table>


<a class="btn btn-info" asp-action="Create">Create Playlist</a>
