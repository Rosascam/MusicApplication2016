@model IEnumerable<MusicFall2016.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h1><span class="glyphicon glyphicon-cd"></span> Albums</h1>

<form asp-action="Details" method="get">
    <div class="form-actions no-color">
        <p>
            Search Album: <input type="text" name="searchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-info" />
        </p>
    </div>
</form>

<br />

<table class="table">

    <thead>
        <tr>
            <th>
                <a asp-action="Details" asp-route-sortOrder="@ViewBag.TitleSortParm">Title</a>
            </th>

            <th>
                <a asp-action="Details" asp-route-sortOrder="@ViewBag.ArtistSortParm">Artist</a>
            </th>

            <th>
                <a asp-action="Details" asp-route-sortOrder="@ViewBag.GenreSortParm">Genre</a>
            </th>

            <th>
                <a asp-action="Details" asp-route-sortOrder="@ViewBag.PriceSortParm">Price</a>
            </th>

            <th>
                <a asp-action="Details" asp-route-sortOrder="@ViewBag.LikeSortParm">Like</a>
            </th>
        </tr>
    </thead>

    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>@album.Like</td>

            <td>
                <a class="btn btn-sm btn-info" asp-action="Like" asp-route-id="@album.AlbumID">Like</a>
                <a class="btn btn-sm btn-info" asp-action="Retrieve" asp-route-id="@album.AlbumID">Details</a>
                <a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@album.AlbumID">Edit</a>                
                <a class="btn btn-sm btn-info" asp-action="Delete" asp-route-id="@album.AlbumID">Delete</a>
                <a class="btn btn-sm btn-info" asp-action="add-to-playlist" asp-route-id="@album.AlbumID">Add to Playlist</a>
                                

            </td>

        </tr>
        
    }

</table>

<form action="Create" method="get">

    <button class="btn btn-info">Create Album</button>

</form>

<br />

<form action="\Home\Index" method="get">

    <button class="btn btn-info">Go back to Home Page</button>

</form>


