@model IEnumerable<MusicFall2016.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h1><span class="glyphicon glyphicon-cd"></span> Albums</h1>



<table class="table">

    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>

    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>@album.Like</td>

            <td>
                <a asp-action="Update" asp-route-id="@album.AlbumID">Edit</a>
                <a asp-action="Retrieve" asp-route-id="@album.AlbumID">Details</a>
                <a asp-action="Delete" asp-route-id="@album.AlbumID">Delete</a>
                <a asp-action="Like" asp-route-id="@album.AlbumID">Like</a>
                
            </td>

        </tr>
        
    }

</table>

<form action="Create" method="get">

    <button>Create Album</button>

</form>

<br />

<form action="\Home\Index" method="get">

    <button>Go back to Home Page</button>

</form>


