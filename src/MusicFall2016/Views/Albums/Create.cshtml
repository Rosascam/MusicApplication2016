@model MusicFall2016.Models.Album
@{
    ViewData["Title"] = "Create an Album:";
}
<h1>Create Album:</h1>
<form asp-action="Create" method="post">

    <div>
        <div>Title <p><input type="text" id="Title" asp-for="Title" value="" /></p></div>
        <span asp-validation-for="Title"></span>

        <div>Artist <p><select asp-for="ArtistID" asp-items="ViewBag.ArtistList" name="ArtistID" class="btn-lg"></select></p></div>
        <span asp-validation-for="ArtistID"></span>

        <div>Add New Artist <p><input type="text" asp-for="Artist.Name" name="addNewArtist" value=""></p></div>
       
        <div>Genre <p><select asp-for="GenreID" asp-items="ViewBag.GenreList" name="GenreID" class="btn-lg"></select></p></div>
        <span asp-validation-for="GenreID"></span>

        <div>Add New Genre <p><input type="text" asp-for="Genre.Name" name="addNewGenre" value="" /></p></div>

        <div>Price <p><input type="text" asp-for="Price" value="" /></p></div>
        <span asp-validation-for="Price"></span>
    </div>

    <button class="btn btn-info">Add album</button>

</form>

<br />

<form action="Details" method="get">

    <button class="btn btn-info"> Go back</button>

</form>

