@model MusicFall2016.Models.Album
@{
    ViewData["Title"] = "Delete an Album:";
}

<h1>Delete Album</h1>

<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="AlbumID" value="@Model.AlbumID" />

    <div>Title: @Model.Title</div>
    <div>Artist: @Model.Artist.Name</div>

    <br />

    <button class="btn btn-info">Delete album</button>
</form>

<br />

<form action="/Albums/Details" method="get">

    <button class="btn btn-info">Go back</button>

</form>
